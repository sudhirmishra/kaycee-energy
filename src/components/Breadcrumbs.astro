---
// Breadcrumbs.astro
// Props: items (array of { label: string, href?: string })
const { items = [] } = Astro.props;
---
<nav aria-label="breadcrumb" class="my-6">
  <ol class="flex flex-wrap items-center gap-x-2 gap-y-1 text-base font-medium">
    {items.map((item, idx) => (
      <li class="flex items-center" key={idx}>
        {item.href ? (
          <a href={item.href} class="text-blue-700 hover:underline transition-colors duration-150">{item.label}</a>
        ) : (
          <span class="text-gray-800">{item.label}</span>
        )}
        {idx < items.length - 1 && (
          <svg class="mx-2 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /></svg>
        )}
      </li>
    ))}
  </ol>
</nav>
