---
import Container from "@/components/container.astro";
import mainLogo from "@/assets/main_logo.png";
import { getResolvedPath } from "@/utils/all.js";
---
<footer class="bg-gray-100 text-gray-700 pt-12 pb-8">
  <Container>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Column 1: Logo and Description only, no border/shadow/CTA -->
      <div class="flex flex-col items-center text-center gap-6 px-4 py-8">
        <div>
          <img src={mainLogo.src} alt="Kay Cee Energy Logo" class="h-20 w-auto mx-auto" />
        </div>
        <div>
          <p class="text-lg text-slate-600 font-medium">
            We drive the transition to a sustainable, reliable and affordable energy. Our solar programs encompass a broad range of material sourcing and services.
          </p>
        </div>
      </div>

      <!-- Column 2: Pages Navigation (centered) -->
      <div class="flex flex-col items-left text-left">
        <h5 class="text-lg font-semibold mb-4">Pages</h5>
        <ul class="space-y-2">
          <li><a href={getResolvedPath("/")} class="hover:text-blue-600 hover:underline">Home</a></li>
          <li><a href={getResolvedPath("/company/about")} class="hover:text-blue-600 hover:underline">About Us</a></li>
          <li><a href={getResolvedPath("/services")} class="hover:text-blue-600 hover:underline">Services</a></li>
          <li><a href={getResolvedPath("/projects")} class="hover:text-blue-600 hover:underline">Projects</a></li>
          <li><a href={getResolvedPath("/news")} class="hover:text-blue-600 hover:underline">News</a></li>
          <li><a href={getResolvedPath("/contact")} class="hover:text-blue-600 hover:underline">Contact</a></li>
        </ul>
      </div>

      <!-- Column 3: Get In Touch Info (right aligned) -->
      <div class="flex flex-col items-left text-left md:text-left">
        <h5 class="text-lg font-semibold mb-4">Get In Touch</h5>
        <ul class="space-y-2">
          <li>
            <a href="tel:+916377208324" class="hover:text-blue-600 hover:underline">
              📞 +91 6377208324
            </a>
          </li>
          <li>
            <a href="mailto:kaycee.energy.infra@gmail.com" class="hover:text-blue-600 hover:underline">
              📧 kaycee.energy.infra@gmail.com
            </a>
          </li>
          <li class="text-sm">
            📍 G-249 , Road no. 5 Indra prasth Industrial Area, Kota Rajasthan, 324005
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-300 pt-8 mt-8 text-center">
      <p class="text-sm text-slate-500">
        Copyright © {new Date().getFullYear()} Kay Cee Energy. All rights reserved.
      </p>
      <p class="text-xs text-slate-500 mt-1">
        Made by <a
          href="https://web3templates.com"
          target="_blank"
          rel="noopener"
          class="hover:underline">
          Web3Templates
        </a> (Original Template)
      </p>
    </div>
  </Container>
</footer>
