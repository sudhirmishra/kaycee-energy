---
const { testimonials, title } = Astro.props;
---

<section class="mt-8">
  <h2 class="text-3xl font-bold mb-6 text-center">{title}</h2>
  <p class="text-center text-gray-500 mb-8">Hear from our valued clients about their experience with Kaycee Energy & Infra.</p>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {testimonials.map((testimonial) => (
      <div class="p-4 border rounded shadow bg-gray-100">
        <div class="flex flex-col items-center">
          <img
            src={testimonial.photo}
            alt={testimonial.client}
            class="w-16 h-16 rounded-full mb-4"
          />
          <h3 class="text-xl font-semibold">{testimonial.client}</h3>
          <p class="text-center mt-2">"{testimonial.feedback}"</p>
          <div class="flex mt-2">
            {[...Array(5)].map((_, index) => (
              <svg
                key={index}
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 24 24"
                class="w-5 h-5 text-yellow-500">
                <path d="M12 .587l3.668 7.431 8.2 1.192-5.934 5.782 1.4 8.168L12 18.896l-7.334 3.864 1.4-8.168L.132 9.21l8.2-1.192z" />
              </svg>
            ))}
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
