---
// Placeholder content for Financial Statement Subsidiary
import { Icon } from 'astro-icon/components';
const sectionTitle = "Financial Statement of Subsidiary companies";
const items = []; // No specific data from pdfs.json
---

<div class="investor-section-content space-y-4">
  {items.length > 0 ? (
    <ul class="space-y-3">
      {items.map(item => (
        <li class="p-4 border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 ease-in-out bg-white">
          <a href={item.url} target="_blank" rel="noopener noreferrer" class="flex items-center justify-between group">
            <div class="flex-grow pr-4">
              <div class="flex items-center mb-1">
                <Icon name="bi:file-earmark-pdf-fill" class="w-6 h-6 text-primary mr-3 flex-shrink-0" />
                <h3 class="text-lg font-medium text-gray-800 group-hover:text-primary transition-colors duration-200">{item.name}</h3>
              </div>
              {item.description && <p class="text-sm text-gray-600 ml-9">{item.description}</p>}
            </div>
            <Icon name="bi:download" class="w-5 h-5 text-gray-400 group-hover:text-primary transition-colors duration-200 flex-shrink-0" />
          </a>
        </li>
      ))}
    </ul>
  ) : (
    <p class="text-gray-600">No documents currently available for {sectionTitle.toLowerCase()}. Please check back later.</p>
  )}
</div>

<style>
  h2 {
    text-transform: capitalize;
  }
</style>
