---
// TeamGridCard.astro
// Props: people: Array<{ name, subtitle, image, description }>, title: string
const { people = [], title = "" } = Astro.props;
---
<section class="mb-16">
  {title && <h2 class="text-4xl font-extrabold mb-6 text-center">{title}</h2>}
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    {people.map((person) => (
      <div class="relative group rounded-lg shadow overflow-hidden h-[500px] flex flex-col justify-end bg-gray-100 cursor-pointer">
        <img
          src={person.image}
          alt={person.name}
          class="absolute inset-0 w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-300 z-0"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent z-10 transition-opacity duration-300 group-hover:from-black/80 group-hover:via-black/40" />
        <div class="relative z-20 p-6 flex flex-col justify-end h-full">
          <h3 class="text-lg font-semibold text-white mb-1 drop-shadow-lg">{person.name}</h3>
          {person.subtitle && <div class="text-blue-200 text-sm mb-2 drop-shadow">{person.subtitle}</div>}
          <p class="text-gray-100 text-xs mt-2 drop-shadow-lg line-clamp-4 group-hover:line-clamp-none transition-all duration-300">
            {person.description}
          </p>
        </div>
        {/* Expanded blurb overlay on hover */}
        <div class="absolute inset-0 z-30 bg-black/90 bg-opacity-90 flex flex-col justify-center items-center p-8 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <h3 class="text-2xl font-bold text-white mb-2 text-center">{person.name}</h3>
          {person.subtitle && <div class="text-blue-200 text-base mb-4 text-center">{person.subtitle}</div>}
          <p class="text-gray-100 text-base text-justify whitespace-pre-line">{person.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>
