---
import Button from "./ui/button.astro";
---

<!-- To make this contact form work, create your free access key from https://web3forms.com/
     Then you will get all form submissions in your email inbox. -->
<form
  action="https://api.web3forms.com/submit"
  method="POST"
  id="form"
  class="needs-validation grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-1" /* Reduced gap-y for tighter label-input spacing */
  novalidate>
  <input type="hidden" name="access_key" value="f65a92c9-e5ab-4e30-bf4b-c4517e802efd" />
  <!-- Create your free access key from https://web3forms.com/ -->
  <input type="checkbox" class="hidden" style="display:none" name="botcheck" />

  <!-- Your Name -->
  <div class="mb-0">
    <p class="mb-1 text-sm font-medium text-gray-700">Your Name</p> {/* Added visible label */}
    <input
      type="text"
      placeholder="Enter Name"
      required
      class="w-full px-4 py-3 border-2 placeholder:text-gray-500 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
      name="yname" /* Changed name */
      id="yname" /* Changed id to match name */
    />
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please provide your full name.
    </div>
  </div>

  <!-- Your Email Address -->
  <div class="mb-0">
    <p class="mb-1 text-sm font-medium text-gray-700">Your Email Address</p> {/* Added visible label */}
    <input
      id="customermail" /* Changed id */
      type="email"
      placeholder="Enter Mail Address" /* Changed placeholder */
      name="customermail" /* Changed name */
      required
      class="w-full px-4 py-3 border-2 placeholder:text-gray-500 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
    />
    <div class="empty-feedback text-red-400 text-sm mt-1">
      Please provide your email address.
    </div>
    <div class="invalid-feedback text-red-400 text-sm mt-1">
      Please provide a valid email address.
    </div>
  </div>

  <!-- Your Phone Number -->
  <div class="mb-0">
    <p class="mb-1 text-sm font-medium text-gray-700">Your Phone Number</p> {/* Added visible label */}
    <input
      id="customerphone" /* Changed id */
      type="tel"
      placeholder="Enter Phone Number" /* Changed placeholder */
      name="customerphone" /* Changed name */
      required
      class="w-full px-4 py-3 border-2 placeholder:text-gray-500 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
    />
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please provide your phone number.
    </div>
  </div>

  <!-- Your Location - City -->
  <div class="mb-0">
    <p class="mb-1 text-sm font-medium text-gray-700">Your Location - City</p> {/* Added visible label */}
    <input
      id="location" /* Changed id */
      type="text"
      placeholder="Enter Location - City" /* Changed placeholder */
      name="location" /* Changed name */
      required
      class="w-full px-4 py-3 border-2 placeholder:text-gray-500 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
    />
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please provide your city.
    </div>
  </div>
  
  <!-- Select Plants? -->
  <div class="mb-0">
    <p class="mb-1 text-sm font-medium text-gray-700">Select Plants?</p> {/* Added visible label */}
    <select
      id="energy-plants" /* Changed id */
      name="energy-plants" /* Changed name */
      required
      class="w-full px-4 py-3 border-2 text-gray-500 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
    >
      {/* Removed default disabled option to match HTML structure */}
      <option value="Solar Energy">Solar Energy</option> {/* Changed options */}
      <option value="Wind Energy">Wind Energy</option> {/* Changed options */}
    </select>
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please select a plant option.
    </div>
  </div>

  <!-- System completed by? -->
  <div class="mb-0">
    <p class="mb-1 text-sm font-medium text-gray-700">System completed by?</p> {/* Added visible label */}
    <select
      id="installtime" /* Changed id */
      name="installtime" /* Changed name */
      required
      class="w-full px-4 py-3 border-2 text-gray-500 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
    >
      {/* Removed default disabled option */}
      <option value="3:6 months">3:6 months</option> {/* Changed options */}
      <option value="6:9 months">6:9 months</option> {/* Changed options */}
      <option value="9:12 months">9:12 months</option> {/* Changed options */}
    </select>
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please select who completed the system.
    </div>
  </div>

  <!-- Power Wants Per Yearly KWp? -->
  <div class="mb-0">
    <p class="mb-1 text-sm font-medium text-gray-700">Power Wants Per Yearly KWp?</p> {/* Added visible label */}
    <select /* Changed from input to select to match HTML */
      id="powerkwp" /* Changed id */
      name="powerkwp" /* Changed name */
      required
      class="w-full px-4 py-3 border-2 text-gray-500 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
    >
      {/* Removed default disabled option */}
      <option value="10000 KWp">10000 KWp</option> {/* Changed options */}
      <option value="25000 KWp">25000 KWp</option> {/* Changed options */}
      <option value="40000 KWp">40000 KWp</option> {/* Changed options */}
    </select>
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please specify power requirements.
    </div>
  </div>

  <!-- Payment Methods? -->
  <div class="mb-0">
    <p class="mb-1 text-sm font-medium text-gray-700">Payment Methods?</p> {/* Added visible label */}
    <select
      id="paymentmethod" /* Changed id */
      name="paymentmethod" /* Changed name */
      required
      class="w-full px-4 py-3 border-2 text-gray-500 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
    >
      {/* Removed default disabled option */}
      <option value="Online Bank Card">Online Bank Card</option> {/* Changed options */}
      <option value="Paypal">Paypal</option> {/* Changed options */}
      <option value="Cash">Cash</option> {/* Changed options */}
    </select>
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please select a payment method.
    </div>
  </div>

  <!-- Message Textarea (Full Width) -->
  <div class="mb-3 md:col-span-2">
    {/* Assuming a label for message is not needed based on HTML, or it would be "Your Message" */}
    {/* <p class="mb-1 text-sm font-medium text-gray-700">Your Message</p> */}
    <label for="message" class="sr-only">Your Message</label>
    <textarea
      id="message"
      name="message" /* Kept name as "message", common practice */
      required
      placeholder="Your Message" /* Changed placeholder, removed (Optional) to match HTML's implicit requirement */
      class="w-full px-4 py-3 border-2 placeholder:text-gray-500 rounded-md outline-none h-36 focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
    ></textarea>
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Please enter your message.
    </div>
  </div>

  <div class="md:col-span-2">
    <Button type="submit" size="lg" block>Submit Message</Button> {/* Changed button text */}
  </div>
  <div id="result" class="mt-3 text-center md:col-span-2"></div>
</form>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #dc3545;
  }
</style>

<script is:inline>
  const form = document.getElementById("form");
  const result = document.getElementById("result");

  form.addEventListener("submit", function (e) {
    e.preventDefault();
    form.classList.add("was-validated");
    if (!form.checkValidity()) {
      form.querySelectorAll(":invalid")[0].focus();
      return;
    }
    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    result.innerHTML = "Sending...";

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.classList.add("text-green-500");
          result.innerHTML = json.message;
        } else {
          console.log(response);
          result.classList.add("text-red-500");
          result.innerHTML = json.message;
        }
      })
      .catch((error) => {
        console.log(error);
        result.innerHTML = "Something went wrong!";
      })
      .then(function () {
        form.reset();
        form.classList.remove("was-validated");
        setTimeout(() => {
          result.style.display = "none";
        }, 5000);
      });
  });
</script>
