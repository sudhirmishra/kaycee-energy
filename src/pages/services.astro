---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Hero from "@/components/hero.astro";
import CardLayout from "@/components/CardLayout.astro";
import Testimonials from "@/components/Testimonials.astro";

import transmissionLinesTowersImg from "@/assets/services/transmission_lines_towers.jpg";
import undergroundCableEhvImg from "@/assets/services/underground_cable_ehv.jpg";
import monopoleImg from "@/assets/services/monopole.jpg";
import substationImg from "@/assets/services/substation.jpg";

import amanGuptaImg from "@/assets/testimonials/aman_gupta.jpg";
import deepakJainImg from "@/assets/testimonials/deepak_jain.jpg";
import sudhanshuImg from "@/assets/testimonials/sudhanshu.jpg";

const servicesCards = [
  {
    title: "Transmission lines Towers",
    image: transmissionLinesTowersImg.src,
    icon: "bi:lightning-charge-fill", // Changed icon
    description: "High-quality transmission line towers for efficient power distribution."
  },
  {
    title: "Underground Cable EHV",
    image: undergroundCableEhvImg.src,
    icon: "bi:ethernet", // Changed icon
    description: "State-of-the-art underground cables for Extra High Voltage applications."
  },
  {
    title: "Monopole",
    image: monopoleImg.src,
    icon: "bi:signpost-fill", // Changed icon
    description: "Durable and efficient monopoles for modern energy infrastructure."
  },
  {
    title: "Substation",
    image: substationImg.src,
    icon: "bi:building-gear", // Changed icon
    description: "Advanced substations for reliable energy management and distribution."
  },
];

const pageTestimonials = [
  {
    client: "Aman Gupta",
    feedback: "Kaycee Energy's services have been crucial for our infrastructure projects. Their expertise in transmission lines is unmatched.",
    photo: amanGuptaImg.src,
  },
  {
    client: "Deepak Jain",
    feedback: "The underground cable work done by Kaycee Energy was top-notch. Professional, timely, and efficient.",
    photo: deepakJainImg.src,
  },
  {
    client: "Sudhanshu Kumar",
    feedback: "We are extremely satisfied with the substation solutions provided. Kaycee Energy delivers quality and reliability.",
    photo: sudhanshuImg.src,
  },
];
---

<Layout title="Services">
  <Hero title="Services" />
  <Container>
    <!-- Breadcrumb Section -->
    <div class="mt-4">
      <nav aria-label="breadcrumb">
        <ol class="flex space-x-2 text-gray-600">
          <li><a href="/" class="hover:underline">Home</a></li>
          <li>/</li>
          <li>Services</li>
        </ol>
      </nav>
    </div>

    <!-- Card Layout Section -->
    <CardLayout
      title="What We Offer You"
      cards={servicesCards}
    />
    <Testimonials title="What Our Clients Say" testimonials={pageTestimonials} />
  </Container>
</Layout>
